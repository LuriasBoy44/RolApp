<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txv_me"
            android:textAlignment="center"
            android:textColor="#8E24AA"
            android:textSize="14sp" />

        <Spinner
            android:id="@+id/spn_atk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:addStatesFromChildren="false" />

        <EditText
            android:id="@+id/txt_atk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/edt_atk"
            android:inputType="number" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txv_vs"
            android:textAlignment="center"
            android:textColor="#8E24AA"
            android:textSize="14sp" />

        <Spinner
            android:id="@+id/spn_def"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/txt_hp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/edt_hp"
            android:inputType="number"
            android:textColor="#8E24AA" />

        <EditText
            android:id="@+id/txt_def"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/edt_ps"
            android:inputType="number" />

        <CheckBox
            android:id="@+id/chk_abs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="@string/chk_abs"
            android:textColor="#FB8C00"
            android:visibility="visible" />

        <TextView
            android:id="@+id/txvAbs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="#00897B" />

        <TextView
            android:id="@+id/txv_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txv_form"
            android:textAlignment="center"
            android:textColor="#8E24AA"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txv_pow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="#06F110" />

        <TextView
            android:id="@+id/txv_Bonus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="#00ACC1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:textAlignment="center">

            <Button
                android:id="@+id/button2"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:onClick="clear"
                android:text="@string/btn_clr" />

            <Button
                android:id="@+id/button"
                android:layout_width="157dp"
                android:layout_height="wrap_content"
                android:onClick="calcular"
                android:text="@string/btn_cal" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/txt_invert"
                android:onClick="invert"
                app:srcCompat="@mipmap/iconfinder_refres"
                tools:srcCompat="@mipmap/iconfinder_refres" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>